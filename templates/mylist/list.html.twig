{% extends 'base.html.twig' %}

{% block title %}Mes événements
{% endblock %}

{% block body %}
	<div class="text-center mt-4">
		<img class="container mb-3" src="https://png.pngtree.com/thumb_back/fw800/back_our/20190625/ourmid/pngtree-youth-may-fourth-youth-festival-poster-banner-image_260821.jpg"/>
		<h1 class="mt-5" style="font-weight: bold; color: #fd9c0d;">Mes événements</h1>
	</div>

	<div class="text-center">
		{% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}
	</div>

	<div class="container mt-4">
		<div class="row row-cols-1 row-cols-md-3 mx-auto">
		{% for event in eventsAttending %}
			<div class="col mb-4">
				<div class="card border-secondary mb-3 offer-cards">
					<div class="card-header" style="background-color: #37474F; color: #fd9c0d">{{ event.title }}</div>

					<div class="card-body text-secondary">
						<p class="card-text offer-card-text">
						à
						{{ event.location }}
						</p>
						<p class="card-text offer-card-text">
						du
						{{ event.startDate|date('d/m/Y H:i') }}
						au
						{{ event.endDate|date('d/m/Y H:i') }}
						</p>
					</div>
				<a href="{{ path('attending_no', {id:event.id}) }}">
					<button class="btn btn-lg btn-danger justify-content-center w-100 p-3" style="margin-top:2rem">Se désinscrire</button>
				</a>
				</div>
			</div>
		{% endfor %}
		</div>
	</div>

	<div class="text-center mt-1">
		<h1 style="font-weight: bold; color: #fd9c0d;">Mes événements créés</h1>
	</div>
	<div class="container mt-4">
		<div class="row row-cols-1 row-cols-md-3 mx-auto">
		{% for event in eventsCreated %}
			<div class="col mb-4">
				<div class="card border-secondary mb-3 offer-cards">
				<div class="card-header" style="background-color: #37474F; color: #fd9c0d">{{ event.title }}</div>

				<div class="card-body text-secondary">
					<p class="card-text offer-card-text">
						à
						{{ event.location }}
					</p>
					<p class="card-text offer-card-text">
						du
						{{ event.startDate|date('d/m/Y H:i') }}
						au
						{{ event.endDate|date('d/m/Y H:i') }}
					</p>
				</div>
				<a href="{{ path('event_update', {id:event.id}) }}">
					<button class="btn btn-lg btn-secondary justify-content-center w-100 p-3" style="margin-top:2rem">Mettre à jour</button>
				</a>
				</div>
			</div>
		{% endfor %}
		</div>
	</div>
{% endblock %}
