{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="text-center mt-4 mb-4">
			<h1 style="font-weight: bold; color: #fd9c0d;">Veuillez vous connecter</h1>
			<img class="container p-3 d-flex justify-content-center mb-5" src="https://previews.123rf.com/images/melitas/melitas2005/melitas200500008/146461914-banni%C3%A8re-web-partageant-la-technologie-de-communication-des-m%C3%A9dias-sociaux-signes-et-symboles.jpg"/>
		</div>
		<div class="container">
			<label for="username">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
			<label for="password">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="container justify-content-center d-flex">
				<div class="row mt-5 mb-5">
					<button class="btn btn-lg btn-primary" type="submit">
						Connexion
					</button>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
